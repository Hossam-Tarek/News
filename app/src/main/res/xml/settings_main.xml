<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_label">

    <EditTextPreference
        android:defaultValue="@string/page_size_default"
        android:key="@string/page_size_key"
        android:title="@string/page_size_label"
        android:inputType="number"
        android:selectAllOnFocus="true"/>

    <ListPreference
        android:defaultValue="@string/order_by_default"
        android:entries="@array/order_by_lable"
        android:entryValues="@array/order_by_values"
        android:key="@string/order_by_key"
        android:title="@string/order_by_label"/>
</PreferenceScreen>